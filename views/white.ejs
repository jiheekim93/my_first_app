<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body class="background">

    <%- include('./partials/wine-nav.ejs') %>

    <div class="wine-container">
      <a href="/sip/newwhite"><div class="add-wine">New White Wine?</div></a>
      <% for (let i = 0; i < whites.length; i++) { %>
      <div class="wine-content">
      <h3><%=whites[i].name%> <%=whites[i].number%> <%=whites[i].year%> </h3>
      <a href="/sip/white/<%=whites[i].id%>">
        <img src= "<%=whites[i].image;%>"/></a>
        <form action="/sip/white/<%=whites[i].id; %>?_method=DELETE" method="POST">
        <input class="delete-btn" type="submit" value="DELETE"/>
        <button class="edit-btn"><a href="/sip/white/<%=whites[i].id; %>/edit">EDIT</a></button>
        </form>
        <li> <%= whites[i].vineyard %> </li>
      </div>
        <% } %>
    </div>
  </body>
</html>
