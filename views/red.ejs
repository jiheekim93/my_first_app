<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('./partials/head.ejs') %>
  </head>
  <body class="background">

    <%- include('./partials/wine-nav.ejs') %>


    <div class="wine-container">
    <a href="/sip/newred"><div class="add-wine">New Red Wine?</div></a>

      <% for (let i = 0; i < reds.length; i++) { %>
    <div class="wine-content">
      <h3>
        <%=reds[i].number%>
        <%=reds[i].name%>  <%=reds[i].year%> </h3>
      <a href="/sip/red/<%=reds[i].id%>">
        <img src= "<%=reds[i].image;%>"/></a>
        <li> <%= reds[i].vineyard %> </li>
        <form action="/sip/red/<%=reds[i].id; %>?_method=DELETE" method="POST">
        <input class="delete-btn" type="submit" value="DELETE"/>
        <button class="edit-btn"><a href="/sip/red/<%=reds[i].id; %>/edit">EDIT</a></button>
        </form>
      </div>
        <% } %>
    </div>
    <!-- <style>
    * {
      border: 1px blue solid;
    }
    </style> -->
  </body>
</html>
